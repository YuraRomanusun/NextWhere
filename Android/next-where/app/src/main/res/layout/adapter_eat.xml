<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    app:cardElevation="@dimen/dp_2"
    app:contentPadding="@dimen/dp_5">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:id="@+id/cl_eat_row"
        >

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:src="@mipmap/food4"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="8dp"
            android:text="@string/dummy_title"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/productImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/tv_cusine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/dummy_cousine"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@+id/dateLayout"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/dummy_local"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@+id/dateLayout"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_cusine" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:dividerPadding="1dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tv_local"
            app:layout_constraintLeft_toLeftOf="@+id/tv_local"
            app:layout_constraintTop_toBottomOf="@+id/tv_local">

            <TextView
                android:id="@+id/tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="@string/price"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_price"
                android:textColor="#1F8092"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2343.23 mi"
            android:textColor="@color/job_color_1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"

            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/dateLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_rectangle"
            android:padding="@dimen/dp_5"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <com.puma.nextwhere.customview.CustomTextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@drawable/ic_calendar"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.puma.nextwhere.customview.CustomTextView
                android:id="@+id/text_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@drawable/ic_time"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="@+id/text_date"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_date"

                />



        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/bt_show_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="Icon"
            android:textAllCaps="false"
            android:textColor="@color/com_facebook_button_background_color"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/dateLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>